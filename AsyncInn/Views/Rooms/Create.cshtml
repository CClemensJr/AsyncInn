@model AsyncInn.Models.Room

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <img src="~/images/room.jpg" asp-append-version="true" class="img-fluid" style="z-index:-100; max-width:100%; max-height: 75%" />
    <h1 class="display-4" style="z-index: 100">Create a Room</h1>
    <hr class="my-4">
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Layout" class="control-label"></label>
                    <input asp-for="Layout" class="form-control" />
                    <span asp-validation-for="Layout" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">View all rooms</a>
    </div>
</div>

