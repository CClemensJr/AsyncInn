@model IEnumerable<AsyncInn.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}


<div class="jumbotron jumbotron-fluid bg-warning">
    <div class="container">
        <h1 class="display-3 text-left">Rooms</h1>
    </div>
</div>

<div class="container">
    <a asp-action="Create" class="btn btn-outline-info">Add a room</a>
    <partial name="~/Views/Shared/_SearchBar.cshtml" view-data="ViewData" />

    <table class="table table-striped">
        <thead class="bg-info">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Layout)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Layout)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>