@model IEnumerable<AsyncInn.Models.RoomAmenities>

@{
    ViewData["Title"] = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron jumbotron-fluid bg-warning">
    <div class="container">
        <h1 class="display-3 text-left">Room Amenities</h1>
    </div>
</div>

<div class="container">
    <p>
        <a asp-action="Create" class="btn btn-outline-info">Add new room amenity</a>
    </p>
    <table class="table">
        <thead class="bg-info">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Amenities)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Room)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Amenities.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room.ID)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
