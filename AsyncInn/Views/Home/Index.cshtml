@{ 
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}


<div class="container">
        <img src="~/images/hotelHallway.jpg" asp-append-version="true" class="img-fluid" style="z-index:-100; max-width:100%; max-height: 75%" />
        <h1 class="display-4" style="z-index: 100">Welcome to the Async Inn Hotel Management System</h1>
        <p class="lead" style="z-index: 100">Lets make life great for our guests<p>
        <hr class="my-4">
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="card col-sm-3" style="width: 20rem;">
            <img class="card-img-top" src="~/images/hotel.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Hotels</h5>
                <p class="card-text">Manage hotel location details.</p>
                <a href="/Hotels/Create" class="btn btn-primary">Create Hotel</a>
            </div>
        </div>

        <div class="card col-sm-3 offset-1" style="width: 20rem;">
            <img class="card-img-top" src="~/images/room.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Rooms</h5>
                <p class="card-text">Manage room details.</p>
                <a href="/Rooms/Create" class="btn btn-primary">Create Room</a>
            </div>
        </div>

        <div class="card col-sm-3 offset-1" style="width: 20rem;">
            <img class="card-img-top" src="~/images/amenities.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Amenities</h5>
                <p class="card-text">Manage amenity details.</p>
                <a href="/Amenities/Create" class="btn btn-primary">Create Amenities</a>
            </div>
        </div>

    </div>
</div>