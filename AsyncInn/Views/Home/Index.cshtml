    Layout = "_Layout";
}


<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to the Async Inn Hotel Management System</h1>
        <p class="lead">Lets make life great for our tenants<p>
        <hr class="my-4">
        @*<p>Manage rooms.</p>*@
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Start here</a>
        </p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="card col-sm-3" style="width: 20rem;">
